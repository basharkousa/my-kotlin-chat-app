            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:id="@+id/group_chat_message_container"
                android:layout_width="wrap_content"
